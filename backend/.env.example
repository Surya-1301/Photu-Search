# Backend environment example for Photu Search
# Copy this file to .env and fill values before running the backend.

# JWT secret for signing user tokens (keep secret in production)
JWT_SECRET=change_this_dev_secret

# Owner/Admin
OWNER_EMAIL=owner@example.com
ADMIN_TOKEN=admin-secret-token

# Unsplash (create an app at https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Pixabay (create an API key at https://pixabay.com/accounts/register/)
PIXABAY_API_KEY=your_pixabay_api_key_here
# Optional override for Pixabay API base URL (normally not needed)
PIXABAY_API_URL=https://pixabay.com/api/

# Pexels (create key at https://www.pexels.com/api/)
PEXELS_API_KEY=your_pexels_api_key_here
# Optional override
PEXELS_API_URL=https://api.pexels.com/v1/search

 

# Optional: restrict CORS in production
# CORS_ORIGIN=https://your-production-origin.example.com
